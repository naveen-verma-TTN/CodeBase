<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ttn.retrofit_kotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity
            android:name="com.ttn.retrofit_kotlin.activities.DestinationListActivity"
            android:label="Destination List"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.ttn.retrofit_kotlin.activities.DestinationDetailActivity"
            android:label="Destination Detail"
            android:parentActivityName="com.ttn.retrofit_kotlin.activities.DestinationListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ttn.retrofit_kotlin.activities.DestinationListActivity" />
        </activity>

        <activity
            android:name="com.ttn.retrofit_kotlin.activities.DestinationCreateActivity"
            android:label="New Destination"
            android:parentActivityName="com.ttn.retrofit_kotlin.activities.DestinationListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ttn.retrofit_kotlin.activities.DestinationListActivity" />
        </activity>

        <activity
            android:name="com.ttn.retrofit_kotlin.activities.WelcomeActivity"
            android:label="GloboFly"
            android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>