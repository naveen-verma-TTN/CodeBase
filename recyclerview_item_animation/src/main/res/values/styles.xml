<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card_style">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardBackgroundColor">@color/card_bg_color</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>

    </style>

    <style name="title_style">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="description_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/content_text_color</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="date_style">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/content_text_color</item>
    </style>


</resources>

